---
pageable: true
per_page: 10
---
<% if paginate && num_pages > 1 %>
  <p>Page <%= page_number %> of <%= num_pages %></p>


<% end %>

<% page_articles.each do |article| %>
  <div class="blog-post">
    <h2 class="blog-post-title"><%= link_to article.title, article %></h2>
    <p class="blog-post-meta"><%= article.date.strftime('%d %B %Y') %></p>
    <!-- use article.summary(250) if you have Nokogiri available to show just
         the first 250 characters -->
    <%= article.summary %>... <%= link_to 'Read more', article %>
  </div>
<% end %>

<% if paginate %>
  <nav>
    <ul class="pager">
      <% if prev_page %>
        <p><%= link_to 'Previous', prev_page %></p>
      <% end %>
      <% if next_page %>
        <li><%= link_to 'Next', next_page %></li>
      <% end %>
    </ul>
  </nav>
<% end %>
